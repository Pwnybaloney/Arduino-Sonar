/* 
Created with Processing 3.5.3
*/

void setup() {
  size(1960, 1080);
  noStroke();
  fill(0,0,0,9);
  rect(0,0,1960,1080);
}

void draw() {
  if (mousePressed) {
    fill(0);
  } else {
    fill(255);
  }
  fill(255,100,100);
  ellipse(mouseX, mouseY, 80, 80);
  fill(0,0,0,9);
  rect(0,0,1960,1080);
}
