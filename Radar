/*
 Created on Processing 3.5.3
*/

color backgroundColor = color(0,0,0,5); //select background color
color radarGreen = color(48, 199, 83);
float screenHeight = 1080/2;
float screenWidth = 1960/2;
int numberOfRings = 5;
int numberOfReferenceLines = 10;
float angle = 0;
int rHeight = 1000;
float angleIncrement = 0.2;
public void settings(){
  size(int(screenWidth),int(screenHeight)); //initialize screen
}


void setup(){ //initialize
  background(backgroundColor); //set background color
  
}

void draw(){
  drawRadarOutline(numberOfRings); //draw radar outline
  
  angle = angleIncrement + angle;  //increment the angle
  if (angle >180 || angle < 0){
    angleIncrement = - angleIncrement; //change the direction of the sweeper when it reaches the end
  }
  
  drawMainGuideLine(); //draw the sweeping green line
  
  fill(backgroundColor); //fade the background
  rect(0,0,2000,2000);
}  


void drawRadarOutline(int numberOfRings){
 
 stroke(radarGreen); //set color for sonar outline
 noFill();
 
 /*Draw Sonar Reference Rings*/
  for ( int i = 1 ; i <= numberOfRings; i++){
   arc(screenWidth/2,screenHeight,(screenWidth*i)/numberOfRings,2*screenHeight*i/numberOfRings,PI,2*PI); //draw rings scaled according to the desired number of rings
  }
  
 /*Draw Sonar Reference Lines*/
  for ( int i = 1; i <= numberOfReferenceLines; i++){
    pushMatrix();
    translate(screenWidth/2,screenHeight);
    line(0,0,screenWidth*cos(radians(i*180/numberOfReferenceLines)),-screenWidth*sin(radians(i*180/numberOfReferenceLines)));
   // print(i*180/numberOfReferenceLines);
    popMatrix();
    /*
    print('\n'); //ensure angles are evenly spaced
    */
  }
}
  
void drawMainGuideLine(){
  stroke(radarGreen); //set color for sonar lines
  noFill();
  pushMatrix();
  translate(screenWidth/2,screenHeight);
  line(0,0,screenWidth*cos(radians(angle)),-screenWidth*sin(radians(angle)));
  popMatrix();
  
  
}
